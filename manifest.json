{
  "manifest_version": 3,
  "name": "MongoDB Form Filler (Label-Based - All URLs)",
  "version": "1.0",
  "description": "Autofills web forms using label matching and data from a MongoDB backend API.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:5000/*"
  
                    
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {},
  "content_scripts": [
    {
      "matches": [
         "<all_urls>" 
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
